@page "/venues/create"
@using Microsoft.EntityFrameworkCore
@using SportsVenueBooking.Domain
@inject IDbContextFactory<SportsVenueBooking.Data.SportsVenueBookingContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Venue</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Venue" OnValidSubmit="AddVenue" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="courtnumber" class="form-label">CourtNumber:</label> 
                <InputNumber id="courtnumber" @bind-Value="Venue.CourtNumber" class="form-control" /> 
                <ValidationMessage For="() => Venue.CourtNumber" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="address" class="form-label">Address:</label> 
                <InputText id="address" @bind-Value="Venue.Address" class="form-control" /> 
                <ValidationMessage For="() => Venue.Address" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="avaliability" class="form-label">Avaliability:</label> 
                <InputText id="avaliability" @bind-Value="Venue.Avaliability" class="form-control" /> 
                <ValidationMessage For="() => Venue.Avaliability" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="timeslot" class="form-label">TimeSlot:</label> 
                <InputDate id="timeslot" @bind-Value="Venue.TimeSlot" class="form-control" /> 
                <ValidationMessage For="() => Venue.TimeSlot" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/venues">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Venue Venue { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddVenue()
    {
        using var context = DbFactory.CreateDbContext();
        context.Venue.Add(Venue);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/venues");
    }
}
